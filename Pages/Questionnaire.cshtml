@page
@model QuestionnaireModel
@{
    ViewBag.meta_title = "Questionnaire";
    ViewBag.meta_keywords = "";
    ViewBag.meta_desc = "";
    ViewBag.theme = "generic";
}

<div class="container">

    <form method="post">
        <div class="form-group">
            <label asp-for="@Model._myQuestionnaire.favoritecolor"></label>
            <input asp-for="@Model._myQuestionnaire.favoritecolor" type="text" class="form-control" />
            <span asp-validation-for="@Model._myQuestionnaire.favoritecolor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model._myQuestionnaire.moviestar"></label>
            <input asp-for="@Model._myQuestionnaire.moviestar" type="text" class="form-control" />
            <span asp-validation-for="@Model._myQuestionnaire.moviestar" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model._myQuestionnaire.icecream"></label>
            <input asp-for="@Model._myQuestionnaire.icecream" type="text" class="form-control" />
            <span asp-validation-for="@Model._myQuestionnaire.icecream" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model._myQuestionnaire.musician"></label>
            <input asp-for="@Model._myQuestionnaire.musician" type="text" class="form-control" />
            <span asp-validation-for="@Model._myQuestionnaire.musician" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model._myQuestionnaire.dogsorcats"></label>
            <textarea asp-for="@Model._myQuestionnaire.dogsorcats" class="form-control" maxlength="100"></textarea>
            <div class="countdown"></div>
            <span asp-validation-for="@Model._myQuestionnaire.dogsorcats" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model._myQuestionnaire.sendername"></label>
            <input asp-for="@Model._myQuestionnaire.sendername" type="text" class="form-control" />
            <span asp-validation-for="@Model._myQuestionnaire.sendername" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model._myQuestionnaire.senderemail"></label>
            <input asp-for="@Model._myQuestionnaire.senderemail" type="email" class="form-control" />
            <span asp-validation-for="@Model._myQuestionnaire.senderemail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="g-recaptcha" data-sitekey="6Le-Jy0UAAAAAMyxngpkD12DzzXto51KmZNciDG2"></div>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>

</div>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- BEGIN: TEXTAREA AUTOSIZE -->
    <script src="~/lib/textarea-autosize/dist/jquery.textarea_autosize.js"></script>
    <script>
        $('textarea').textareaAutoSize();
    </script>
    <!-- END: TEXTAREA AUTOSIZE -->

    <script src="~/lib/textarea-countdown.js"></script>

    <script src='https://www.google.com/recaptcha/api.js'></script>
}
